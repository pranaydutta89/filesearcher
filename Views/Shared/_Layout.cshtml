<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - fileSearcher</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/Start.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/app.min.css" asp-append-version="true" />
    </environment>
</head>
<body ng-app="app" ng-cloak ng-strict-di>
  

    <div>
        <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Me">Me</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Settings">Settings</a></li>
                </ul> 
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - fileSearcher</p>
        </footer>
    </div>


    <environment include="Development">
        <script src="~/lib/angular/angular.js"></script>
        <script src="~/js/appModule.js"></script>
        <script src="~/js/settings.js"></script>
        <script src="~/js/me.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/app.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
